// https://www.typescriptlang.org/tsconfig
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES2015",
    "esModuleInterop": true,
    "lib": ["ES2019", "dom"],
    "target": "ES2019",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
